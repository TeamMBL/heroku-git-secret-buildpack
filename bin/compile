#!/usr/bin/env bash

indent() {
    sed -u 's/^/       /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

GPG_KEY=$(cat "${ENV_DIR}/GPG_PRIVATE_KEY")
GPG_PASSWORD=$(cat "${ENV_DIR}/GPG_PASSWORD") | indent

echo "-------------> Git-Secret Buildpack"

if [[ -z "${GPG_KEY}" ]]; then
    echo "GPG_PRIVATE_KEY not set. Aborting" | indent
    exit 1
fi

mkdir -p $BUILD_DIR/vendor
cd $BUILD_DIR/vendor

echo "Installing gawk" | ident
git clone https://git.savannah.gnu.org/r/gawk.git | ident
cd gawk
PREFIX="$BUILD_DIR/vendor/gawk" ./bootstrap.sh && ./configure && make && make check | ident
PATH=$BUILD_DIR/vendor/gawk/bin:$PATH


echo "Installing git secret" | indent
cd $BUILD_DIR/vendor
git clone https://github.com/sobolevn/git-secret.git | indent
cd git-secret && make build | indent
PREFIX="$BUILD_DIR/vendor/git-secret" make install | indent
PATH=$BUILD_DIR/vendor/git-secret/bin:$PATH

# try and reveal secret files
echo "Revealing secret files" | indent
cd $BUILD_DIR
if [[ -z "${GPG_PASSWORD}" ]]; then
  git secret reveal | indent
else
  git secret reveal -p "$GPG_PASSWORD" | indent
fi



